#include <iostream>

using namespace std;

int main() {
    int num;

    // Запрос трехзначного числа
    cout << "Введите трехзначное число: ";
    cin >> num;

    // Проверка что число трехзначное
    if (num < 100 || num > 999) {
        cout << "Число не трехзначное" << endl;
        return 1; // Завершаем программу с ошибкой
    }

    // Вычисление суммы цифр
    int sum = 0;
    int temp = num; // Сохраняем исходное число для дальнейшего использования
    while (temp > 0) {
        sum += temp % 10; // Добавляем последнюю цифру к сумме
        temp /= 10;      // Удаляем последнюю цифру
    }

    // Проверка делимости  на 3
    if (sum % 3 == 0) {
        cout << "Число " << num << " делится на 3" << endl;
    } else {
        cout << "Число " << num << " не делится на 3" << endl;
    }

    return 0;
